<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <!-- LinearLayout inside ScrollView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <!-- Top View -->
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="#0066FF" />

        <!-- Container for Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <!-- Button 1 -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cornerRadius="10dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#6E9FED"
                android:textAllCaps="false"
                android:id="@+id/button_1"
                android:text="Surviving hydroplaning" />

            <!-- Button 2 -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cornerRadius="10dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#6E9FED"
                android:id="@+id/button_2"
                android:textAllCaps="false"
                android:text="Surviving a knife stab" />

            <!-- Button 3 -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cornerRadius="10dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#6E9FED"
                android:id="@+id/button_3"
                android:textAllCaps="false"
                android:text="Surviving a knife stab" />

            <!-- Button 4 -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cornerRadius="10dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#6E9FED"
                android:id="@+id/button_4"
                android:textAllCaps="false"
                android:text="Surviving falling from high building" />

            <!-- Button 5 -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cornerRadius="10dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#6E9FED"
                android:id="@+id/button_5"
                android:textAllCaps="false"
                android:text="Surviving choking alone" />

            <!-- Button 6 -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cornerRadius="10dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#6E9FED"
                android:id="@+id/button_6"
                android:textAllCaps="false"
                android:text="Escaping a Fire" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
